{
  "root": true,
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": "sukka/typescript",
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-non-null-assertion": "off"
      },
      "parserOptions": {
        "project": [
          "./tsconfig.json"
        ]
      }
    }
  ],
  "ignorePatterns": [
    "dist/**/*"
  ]
}
